{% extends "base.html.twig" %}

{% block title %}Création Note d'Information - Chrono{% endblock %}

{% block body %}

    <main class="d-flex">

        {% include "sidebar.html.twig" %}

        <section class="main">

            <section class="content">

                <h4>Créer une nouvelle note d'information</h4>

                {{ form_start(form) }}
                <div>
                    {{ form_row(form.iNumero, {'label': 'Numéro'}) }}
                    {{ form_row(form.vLibelle, {'label': 'Libellé'}) }}
                    <div class="d-none error mb-2"><b>Attention : </b>Le champ "Libellé" a atteint la limite de caractères autorisée (210).</div>
                    {{ form_row(form.vService, {'label': 'Service'}) }}
                    <div class="d-none error mb-2"><b>Attention : </b>Le champ "Service" a atteint la limite de caractères autorisée (110).</div>
                    {{ form_row(form.iIdUser, {'label': 'Id User'}) }}
                    <div class="d-flex align-items-center">
                        {{ form_row(form.Creer, {'label': 'Créer '}) }}
                        <a href="{{ path('information') }}?year={{ "now"|date("Y") }}" class="link-black ml-2">Annuler</a>
                    </div>
                </div>
                {{ form_end(form) }}

            </section>

        </section>

    </main>

    <script defer>
        function checkErrorInput(element, maxLength) {
            if(element.value.length === maxLength) {
                element.parentElement.nextElementSibling.style.display = "block"
            } else {
                element.parentElement.nextElementSibling.style.display = "none"
            }
        }
    </script>

{% endblock %}