{% extends "base.html.twig" %}

{% block title %}Courrier - Chrono{% endblock %}

{% block body %}

    <main class="d-flex">

        {% include "sidebar.html.twig" %}

        <section class="main">

            {% include "navbar.html.twig" %}

            <section class="content">

                <div style="height: calc(100vh - 13rem); overflow-y: auto">
                <table class="table">

                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>N°</th>
                            <th>Objet</th>
                            <th>Destinataire</th>
                            <th colspan="2">Options</th>
                        </tr>
                    </thead>

                    <tbody>
                        {% for row in 1..30 %}
                        <tr>
                            <td>15/10/2020</td>
                            <td>124</td>
                            <td>Bulletin de salaire</td>
                            <td>Mme MARTIN</td>
                            <td class="table-min lightblue"><svg class="f-blue" xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 0 24 24" width="24"><path d="M0 0h24v24H0z" fill="none"/><path d="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z"/></svg></td>
                            <td class="table-min lightred"><svg class="f-red" xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 0 24 24" width="24"><path d="M0 0h24v24H0z" fill="none"/><path d="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM19 4h-3.5l-1-1h-5l-1 1H5v2h14V4z"/></svg></td>
                        </tr>
                        {% endfor %}
                    </tbody>

                </table>
                </div>

                <div class="d-flex justify-content-center mt-2">
                    <span class="pagination-item">← Précédent</span>
                    <span class="pagination-item mr-2 ml-2">2020</span>
                    <span class="pagination-item">Suivant →</span>
                </div>

                {% include "add.html.twig" with { 'page': 'courrier' } %}

            </section>

        </section>

    </main>

{% endblock %}