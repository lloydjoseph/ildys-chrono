{% extends "base.html.twig" %}

{% block title %}Création Courrier - Chrono{% endblock %}

{% block body %}

    <main class="d-flex">

        {% include "sidebar.html.twig" %}

        <section class="main">

            <section class="content">

                <h4>Créer un nouveau courrier</h4>

                {{ form_start(form) }}
                <div>
                    {{ form_row(form.iNumero, {'label': 'Numéro'}) }}
                    {{ form_row(form.vLibelle, {'label': 'Libellé'}) }}
                    {{ form_row(form.vDestinataire, {'label': 'Destinataire'}) }}
                    {{ form_row(form.iIdUser, {'label': 'Id User'}) }}
                    <div class="d-flex align-items-center">
                        {{ form_row(form.Creer, {'label': 'Créer '}) }}
                        <a href="{{ path('courrier') }}?year={{ "now"|date("Y") }}" class="link-black ml-2">Annuler</a>
                    </div>
                </div>
                {{ form_end(form) }}

            </section>

        </section>

    </main>

{% endblock %}